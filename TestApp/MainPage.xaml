<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MarketAlly.Maui.ViewEngine;assembly=MarketAlly.Maui.ViewEngine"
             x:Class="TestApp.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="DL" Clicked="ToolbarItem_Clicked" />
        <ToolbarItem Text="History" Clicked="ShowHistory_Clicked" />
        <ToolbarItem Text="Refresh" Clicked="RefreshData_Clicked" />
        <ToolbarItem Text="Links" Clicked="ShowLinks_Clicked" />
        <ToolbarItem Text="Thumbnail" Clicked="CaptureThumbnail_Clicked" />
    </ContentPage.ToolbarItems>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Navigation History Overlay -->
        <Grid x:Name="historyOverlay"
              Grid.Row="0"
              Grid.RowSpan="3"
              IsVisible="False"
              BackgroundColor="#CC000000"
              ZIndex="102">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="HideHistory_Clicked" />
            </Grid.GestureRecognizers>

            <Border BackgroundColor="White"
                    Stroke="Gray"
                    StrokeThickness="2"
                    Margin="40"
                    Padding="0"
                    MaximumWidthRequest="700">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" BackgroundColor="#2196F3" Padding="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Text="Navigation History"
                               Grid.Column="0"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center" />

                        <Button Text="âœ•"
                                Grid.Column="1"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                Clicked="HideHistory_Clicked"
                                Padding="10" />
                    </Grid>

                    <!-- History List -->
                    <CollectionView x:Name="historyCollectionView"
                                    Grid.Row="1"
                                    Margin="10"
                                    SelectionMode="Single"
                                    SelectionChanged="HistoryItemSelected">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12"
                                        Margin="5"
                                        BackgroundColor="White"
                                        Stroke="LightGray"
                                        StrokeThickness="1">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Favicon placeholder -->
                                        <Border Grid.Column="0"
                                                Grid.RowSpan="2"
                                                BackgroundColor="#f0f0f0"
                                                WidthRequest="32"
                                                HeightRequest="32"
                                                Margin="0,0,12,0"
                                                VerticalOptions="Start">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="4" />
                                            </Border.StrokeShape>
                                            <Label Text="ðŸŒ"
                                                   FontSize="18"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Border>

                                        <!-- Title -->
                                        <Label Grid.Column="1"
                                               Grid.Row="0"
                                               Text="{Binding Title}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               TextColor="Black"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="1" />

                                        <!-- URL -->
                                        <Label Grid.Column="1"
                                               Grid.Row="1"
                                               Text="{Binding Url}"
                                               FontSize="12"
                                               TextColor="#666666"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="1" />

                                        <!-- Timestamp -->
                                        <Label Grid.Column="2"
                                               Grid.Row="0"
                                               Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}"
                                               FontSize="11"
                                               TextColor="#666666"
                                               VerticalOptions="Center"
                                               Margin="10,0,0,0" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Footer -->
                    <Grid Grid.Row="2" BackgroundColor="#f0f0f0" Padding="15">
                        <Label x:Name="historyStatsLabel"
                               FontSize="12"
                               TextColor="Black"
                               HorizontalOptions="Center" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Thumbnail Overlay -->
        <Grid x:Name="thumbnailOverlay"
              Grid.Row="0"
              Grid.RowSpan="3"
              IsVisible="False"
              BackgroundColor="#CC000000"
              ZIndex="101">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="HideThumbnail_Clicked" />
            </Grid.GestureRecognizers>

            <Border BackgroundColor="White"
                    Stroke="Gray"
                    StrokeThickness="2"
                    Margin="40"
                    Padding="15"
                    MaximumWidthRequest="800"
                    MaximumHeightRequest="600">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Padding="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Text="Page Thumbnail"
                               Grid.Column="0"
                               FontSize="20"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />

                        <Button Text="âœ•"
                                Grid.Column="1"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="HideThumbnail_Clicked"
                                Padding="10" />
                    </Grid>

                    <Border Grid.Row="1"
                            Stroke="LightGray"
                            StrokeThickness="1"
                            Padding="5"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5" />
                        </Border.StrokeShape>
                        <Image x:Name="thumbnailImage"
                               Aspect="AspectFit"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Border>

                    <Grid Grid.Row="2" Padding="0,10,0,0">
                        <Label x:Name="thumbnailStatusLabel"
                               FontSize="12"
                               TextColor="Gray"
                               HorizontalOptions="Center" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Links Modal Overlay -->
        <Grid x:Name="linksOverlay"
              Grid.Row="0"
              Grid.RowSpan="3"
              IsVisible="False"
              BackgroundColor="#80000000"
              ZIndex="100">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="HideLinks_Clicked" />
            </Grid.GestureRecognizers>

            <Border BackgroundColor="White"
                    Stroke="Gray"
                    StrokeThickness="1"
                    Margin="20"
                    Padding="0"
                    MaximumWidthRequest="800">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" BackgroundColor="#f0f0f0" Padding="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Text="Page Links"
                               Grid.Column="0"
                               FontSize="18"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />

                        <HorizontalStackLayout Grid.Column="1"
                                               Spacing="5"
                                               Margin="0,0,10,0">
                            <Button x:Name="allLinksButton"
                                    Text="All"
                                    BackgroundColor="#2196F3"
                                    TextColor="White"
                                    Padding="10,5"
                                    Clicked="ShowAllLinks_Clicked" />
                            <Button x:Name="bodyLinksButton"
                                    Text="Body Only"
                                    BackgroundColor="LightGray"
                                    TextColor="Black"
                                    Padding="10,5"
                                    Clicked="ShowBodyLinks_Clicked" />
                        </HorizontalStackLayout>

                        <Button Text="âœ•"
                                Grid.Column="2"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="HideLinks_Clicked" />
                    </Grid>

                    <CollectionView x:Name="linksCollectionView"
                                    Grid.Row="1"
                                    Margin="10"
                                    SelectionMode="Single"
                                    SelectionChanged="LinkSelected">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10"
                                        Margin="5"
                                        BackgroundColor="{Binding BackgroundColor}"
                                        Stroke="LightGray"
                                        StrokeThickness="1">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="5" />
                                    </Border.StrokeShape>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0"
                                                Grid.RowSpan="3"
                                                Grid.Column="0"
                                                BackgroundColor="#2196F3"
                                                Padding="8"
                                                VerticalOptions="Start"
                                                Margin="0,0,10,0"
                                                WidthRequest="40"
                                                HeightRequest="40">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="20" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Rank}"
                                                   TextColor="White"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Border>

                                        <Label Grid.Row="0"
                                               Grid.Column="1"
                                               Text="{Binding DisplayText}"
                                               FontAttributes="Bold"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2" />

                                        <Label Grid.Row="1"
                                               Grid.Column="1"
                                               Text="{Binding Url}"
                                               FontSize="12"
                                               TextColor="Gray"
                                               LineBreakMode="TailTruncation" />

                                        <Label Grid.Row="2"
                                               Grid.Column="1"
                                               Text="{Binding AdLabel}"
                                               FontSize="11"
                                               TextColor="Red"
                                               IsVisible="{Binding IsPotentialAd}"
                                               Margin="0,5,0,0" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Grid Grid.Row="2" BackgroundColor="#f0f0f0" Padding="15">
                        <Label x:Name="linksStatsLabel" FontSize="12" TextColor="Gray" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- URL Entry -->
        <Entry x:Name="urlEntry"
               Grid.Row="0"
               Placeholder="Enter URL (e.g., https://example.com or PDF URL)"
               ReturnType="Go"
               Keyboard="Url"
               Completed="urlEntry_Completed"
               Margin="5" />

        <!-- Navigation Bar -->
        <HorizontalStackLayout Grid.Row="1"
                               Spacing="10"
                               Padding="5"
                               BackgroundColor="#f5f5f5">
            <Button Text="â—€"
                    Clicked="GoBack_Clicked"
                    IsEnabled="{Binding Source={x:Reference browserView}, Path=CanGoBackInHistory}"
                    WidthRequest="50"
                    Padding="5"
                    TextColor="Black" />
            <Button Text="â–¶"
                    Clicked="GoForward_Clicked"
                    IsEnabled="{Binding Source={x:Reference browserView}, Path=CanGoForwardInHistory}"
                    WidthRequest="50"
                    Padding="5"
                    TextColor="Black" />
            <Label x:Name="pageTitle"
                   Text="MarketAlly Browser Test"
                   VerticalOptions="Center"
                   HorizontalOptions="FillAndExpand"
                   LineBreakMode="TailTruncation"
                   TextColor="Black" />
            <Label x:Name="loadingIndicator"
                   Text="â³"
                   IsVisible="{Binding Source={x:Reference browserView}, Path=IsLoading}"
                   VerticalOptions="Center"
                   FontSize="18" />
        </HorizontalStackLayout>

        <!-- BrowserView (NEW!) -->
        <local:BrowserView x:Name="browserView"
                           Grid.Row="2"
                           PageDataChanged="BrowserView_PageDataChanged"
                           UserAgentMode="Mobile"
                           MaxHistoryItems="100"
                           ShowInlinePdf="True"
                           EnableRouteExtraction="False" />
    </Grid>

</ContentPage>
