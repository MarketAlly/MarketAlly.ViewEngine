<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Slyv.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Slyv.Maui.Views"
    Title="Slyv.Maui"
    FlyoutBehavior="Flyout">

    <FlyoutItem Title="Slyv">
        <ShellContent
            x:Name="OverviewContent"
            Title="Welcome"
            Route="Overview" />
    </FlyoutItem>
    <FlyoutItem Title="Chat">
        <ShellContent
            x:Name="ChatShellContent"
            Title="Chat"
            Route="ChatPage" />
    </FlyoutItem>
    <FlyoutItem Title="Browser">
        <ShellContent
            x:Name="BrowserShellContent"
            Title="Browser"
            Route="BrowserPage" />
    </FlyoutItem>
    <FlyoutItem Title="Settings">
        <ShellContent
            x:Name="SettingsShellContent"
            Title="Settings"
            Route="SettingsPage" />
    </FlyoutItem>

</Shell>
