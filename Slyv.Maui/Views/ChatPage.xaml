<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:chat="clr-namespace:UnifiedChat.Maui.Controls;assembly=UnifiedChat.Maui"
             x:Class="Slyv.Maui.Views.ChatPage"
             Title="Chat">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Clear"
                     Clicked="OnClearClicked"
                     Order="Primary"
                     Priority="1" />
    </ContentPage.ToolbarItems>

    <!-- ContentView will be populated from code-behind with injected control -->
    <ContentView x:Name="ChatHost" />

</ContentPage>
